<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN"/>
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT"/>
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BrakeTest"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:configChanges="orientation"
            android:screenOrientation="reverseLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MenuActivity"
            android:exported="false"
            android:configChanges="orientation"
            android:screenOrientation="reverseLandscape"/>
        <activity android:name=".TestActivityDescription"
            android:exported="false"
            android:configChanges="orientation"
            android:screenOrientation="reverseLandscape"/>
        <activity android:name=".TestActivityStart"
            android:exported="false"
            android:configChanges="orientation"
            android:screenOrientation="reverseLandscape"/>
        <activity android:name=".breaktest.BreakTestActivity"
            android:exported="false"
            android:configChanges="orientation"
            android:screenOrientation="reverseLandscape"/>
        <activity android:name=".RealTimeTestActivity"
            android:exported="false"
            android:configChanges="orientation"
            android:screenOrientation="reverseLandscape"/>
        <activity android:name=".settings.SettingsActivity"
            android:exported="false"
            android:configChanges="orientation"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="reverseLandscape"/>
    </application>

</manifest>