<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/icon_description_file"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/file_icon"
        android:src="@drawable/baseline_article_24"
        android:layout_marginHorizontal="5dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/file_data"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/file_icon"
        app:layout_constraintEnd_toEndOf="@id/file_action"
        android:layout_marginStart="5dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/file_name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Complete File name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/file_date"
            android:textSize="12sp"
            android:textStyle="italic"
            android:gravity="center_vertical"
            android:text="File date"/>

    </LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/icon_description_file"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/file_action"
        android:src="@drawable/baseline_arrow_forward_ios_24"
        android:layout_margin="5dp"
        android:layout_weight="1" />



</androidx.constraintlayout.widget.ConstraintLayout>