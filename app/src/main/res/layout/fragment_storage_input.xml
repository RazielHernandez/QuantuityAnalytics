<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:minWidth="150dp"
        android:id="@+id/record_test_label"
        android:text="Test"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:minWidth="150dp"
        android:id="@+id/record_sensor_label"
        android:text="Sensor"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/record_test_label"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:minWidth="150dp"
        android:id="@+id/record_string_label"
        android:text="Break record"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/record_sensor_label"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:minWidth="150dp"
        android:id="@+id/record_int_label"
        android:text="Test value"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/record_string_label"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:minWidth="150dp"
        android:id="@+id/record_counter_label"
        android:text="Noumber of records"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/record_int_label"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/record_test"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/record_test_label"
        android:hint="Test name"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/record_sensor"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/record_test"
        app:layout_constraintStart_toEndOf="@+id/record_sensor_label"
        android:hint="Sensor MAC Address"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/record_string"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/record_sensor"
        app:layout_constraintStart_toEndOf="@+id/record_string_label"
        android:hint="String value"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/record_int"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/record_string"
        app:layout_constraintStart_toEndOf="@+id/record_int_label"
        android:hint="Int value"
        android:inputType="number"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/record_counter"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/record_int"
        app:layout_constraintStart_toEndOf="@+id/record_counter_label"
        android:hint="Number of records"
        android:inputType="number"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_save"
        app:layout_constraintTop_toBottomOf="@id/record_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Save"
        android:textSize="22dp"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>